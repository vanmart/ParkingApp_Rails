<div class="border-form-div">
  <h2>Sign up</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.text_field :name, :autofocus => true, :placeholder => 'Nombre' %>
    <%= f.text_field :last_name, :autofocus => true, :placeholder => 'Apellido' %>
    <%= f.text_field :phone, :autofocus => true, :placeholder => 'Telefono', :pattern => '^[0-9]*$' %>
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address',:required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
    <%= f.password_field :password, :placeholder => 'Password' %>
    <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation' %>
    
    <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
  	<%= hidden_field_tag "user[role_ids][]", "" %> 
  
    <%= f.submit "Sign up",:class=>'btn btn-primary' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>